<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Book.
    -->
    <changeSet id="20220907094145-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="book_id"
                                 baseTableName="rel_book__book_genre"
                                 constraintName="fk_rel_book__book_genre__book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"/>

        <addForeignKeyConstraint baseColumnNames="book_genre_id"
                                 baseTableName="rel_book__book_genre"
                                 constraintName="fk_rel_book__book_genre__book_genre_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book_genre"/>

        <addForeignKeyConstraint baseColumnNames="publisher_id"
                                 baseTableName="book"
                                 constraintName="fk_book__publisher_id"
                                 referencedColumnNames="id"
                                 referencedTableName="publisher"/>
    </changeSet>
</databaseChangeLog>
